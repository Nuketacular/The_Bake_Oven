<div class="page">
  <%= render 'home/header' %>
  <% @contactus = ContactUs.first %>
  <h1 class="contactBanner">Contact Us</h1>
  <div class="contactContent">
    <p>Phone: <%= @contactus.phone %></p>
    <p>Email: <%= @contactus.email %></p>
    <p><%= @contactus.address %></p>
    <p><%= @contactus.postal_code %></p>
  </div>
  <h2 class="hoursBanner">Store Hours</h2>
  <div class="storeHours">
    <ul>
      <li>Sunday: Closed</li>
      <li>Monday: 8am - 8pm</li>
      <li>Tuesday: 8am - 8pm</li>
      <li>Wednesday: 8am - 8pm</li>
      <li>Thursday: 8am - 8pm</li>
      <li>Friday: 8am - 8pm</li>
      <li>Saturday: 8am - 6pm</li>
    </ul>
  </div>
  <footer class="contactFooter">
    <%= render 'home/footer' %>
  </footer>  
</div>
