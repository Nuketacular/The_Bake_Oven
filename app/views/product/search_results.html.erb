<div class="page">
  <%= render 'home/header' %>
  <%= render 'searchSide' %>
  <section class="searchResults">
    <h1 class="dataBanner">Search Results for '<%= params[:search_keywords] %>'</h1>
    <div class="dataContent">
      <% if @search_results.size.zero? %>
        <p>No products found.</p>
      <% else %>      
        <%= render partial: 'search_results', collection: @search_results, as: "search_results" %>
      <% end %>
    </div>
  </section>
  <footer class="footer">
    <%= render 'home/footer' %>
  </footer>
</div>