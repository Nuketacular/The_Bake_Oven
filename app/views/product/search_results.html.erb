<div class="page">
  <%= render 'home/header' %>
  <%= render 'searchSide' %>
  <section class="searchResults">
    <% if params[:category_id] == 0 %>
      <h1 class="dataBanner">Search Results for '<%= params[:search_keywords] %>'</h1>
      <div class="dataContent">
        <% if @search_results.size.zero? %>
          <p>No products found.</p>
        <% else %>      
          <%= render partial: 'search_results', collection: @search_results, as: "search_results" %>
        <% end %>
      </div>
    <% else %>
      <h1 class="dataBanner">Search Results for '<%= params[:search_keywords] %>' in <%= Category.find(id = params[:category_id]).name %>.</h1>
      <div class="dataContent">
        <% if @search_results.size.zero? %>
          <p>No products found.</p>
        <% else %>      
          <%= render partial: 'search_results', collection: @search_results, as: "search_results" %>
        <% end %>
      </div>
    <% end %>
  </section>
  <footer class="footer">
    <%= render 'home/footer' %>
  </footer>
</div>