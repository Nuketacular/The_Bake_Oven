<header>
  <a id= "topLink"></a>
    <div class="pic">
    <%= image_tag("headerPic.jpg", class: "headerPic") %>
    </div>
    <div class="nav">
    <ul>
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "Products", product_path %></li>
      <li><%= link_to "About Us", about_us_path %></li>
      <li><%= link_to "Contact Us", contact_us_path %></li>
      <li><a href="#">Cart</a></li>
    </ul>
  </div>
  <div class="searchBar">
    <%= form_tag search_results_path, method: :get do %>
      <%= text_field_tag :search_keywords %>
      <%= select_tag(:category_id, options_for_select([['All', 0], ['Bakery', 1], ['Deli', 5],
                                                       ['Imports', 6], ['Giftware', 7]])) %>
      <%= submit_tag 'Search', class: "searchButton" %>
    <% end %>
  </div>
</header>